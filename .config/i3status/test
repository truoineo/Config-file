general {
        output_format = "i3bar"
        colors = true
        interval = 5
}
order += "volume master"
order += "battery 0"
order += "cpu usage"
order += "cpu_temperature 0"
order += "memory"
order += "tztime local"


battery 0 {
	integer_battery_capacity = true
	hide_seconds = true
        format = "%percentage Left: %remaining"
        format_down = "No battery"
        status_chr = " "
        status_bat = " "
        status_unk = ""
        status_full = " "
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}
volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:alsa_output.pci-0000_00_14.2.analog-stereo"
}
tztime local {
        format = " %H:%M"
}
cpu_usage {
	format = "CPU: %usage"
}	
cpu_temperature 0 {
        format = "%degrees °C"
}
memory {
        format = "RAM: %used"
}
